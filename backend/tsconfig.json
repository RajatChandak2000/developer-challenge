{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
     "moduleResolution": "node",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "contracts", "build", "eslint.config.mjs"]
}
